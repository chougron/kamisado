{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "kamisado-common/dist/*": ["../node_modules/kamisado-common/src/*"],
      "*": ["node_modules/*"]
    },
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2017"]
  },
  "references": [{ "path": "node_modules/kamisado-common" }]
}
